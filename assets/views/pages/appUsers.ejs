<!DOCTYPE html>
<html lang="en">
    <head>
        <%-include('../layouts/head') %>
    </head>
<body>
    <header>
        <%-include('../partials/header') %>
    </header>
    <main>
        <a class="volver" href="/">Volver</a>
        <h1> Listado de Usuarios </h1>

        <ul>
            <% users.forEach(function(user) { %>
            <li>
              <article>
                <h4>
                  <a><%= user.nombre + ' ' + user.apellido %></a>
                </h4>
                
                <form action="" method="post">
                  <button>Modificar</button>
                </form>
                <form action="/deleteUser/<%= user.id  %>" method="post">
                  <button>Eliminar</button>
                </form>
              </article>
            </li>
            <% }); %>
        </ul>

        <form action="createUser" method="POST">
          <button type="submit"  data-bs-toggle="modal" data-bs-target="#modalCrearUsuario"> Crear usuario</button>
        
        
          <!-- Modal para crear usuarios -->
          <div class="modal" tabindex="-1" id="modalCrearUsuario">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">CREAR USUARIO</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <label for="nombre" id="nombre">Nombre</label>
                  <input type="text" name="nombre" id="nombre" placeholder="Nombre">
                  <label for="apellido" id="apellido">Apellido</label>
                  <input type="text" name="apellido" id="apellido" placeholder="Apellido">
                  <label for="email" id="email">Email</label>
                  <input type="email" name="email" id="email" placeholder="Email">
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                  <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
              </div>
            </div>
          </div>
      </form>
        <!-- Modal para editar usuarios -->
        <div class="modal" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">EDITAR USUARIO</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <label for="nombre" id="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" placeholder="Nombre">
                <label for="apellido" id="apellido">Apellido</label>
                <input type="text" name="apellido" id="apellido" placeholder="Apellido">
                <label for="email" id="email">Email</label>
                <input type="email" name="email" id="email" placeholder="Email">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary">Guardar</button>
              </div>
            </div>
          </div>
        </div>

    </main>
    <footer>
        <%-include('../partials/footer') %>
    </footer>
</body>
</html>